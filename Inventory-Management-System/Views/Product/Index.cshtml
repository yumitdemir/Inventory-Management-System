@model dynamic
<link href="/css/Product/Index.css" rel="stylesheet" />

@*Sending variables to javascrip*@
@{
    var currentView = Model.showNum;
    var currentIndexId = Model.id;
}
<input type="hidden" id="currentView" value=@currentView>
<input type="hidden" id="currentIndexId" value=@currentIndexId>


<form>
<select id="viewDropDown">
    <option value="10">10</option>
    <option value="20">20</option>
    <option value="50">50</option>
    <option value="100">100</option>
</select>

</form>



  <table
      style="width: 100%; caption-side: bottom"
      id="ct-2efd2e3c-4e00-11ec-a93d-b34dba1f0acd"
      class="table table-striped dataTable no-footer dtr-column"
      aria-describedby="ct-2efd2e3c-4e00-11ec-a93d-b34dba1f0acd_info"
    >
      <thead>
        <tr role="row">


            <th style="width: 110px">
                Name
            </th>

            <th style="width: 280px">
                Description
            </th>

            <th style="width: 50px">
                Price
            </th>

            <th style="width: 50px">
                Quantity
            </th>

            <th style="width: 70px">
                Code
            </th>
             <th style="width: 100px">
                Supplier
            </th>
            <th style="width: 50px">
                Category
            </th>

        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model.products)
        {
           
            <tr>
                 
                <td >  @item.Name</td>
                <td >
                   
                     @item.Description
                </td>
                <td >
                   
                     @item.Price
                </td>
                <td >
                    @item.Quantity
                </td>
                <td >@item.ProductCode</td>
                <td>
                    <a class="nav-link text-dark" asp-controller="SupplierDetail" asp-action="Index" asp-route-id="@item.SupplierId" asp-route-showNum="@Model.showNum"> @item.Supplier?.Name</a>
                   
                </td>
                <td >

                    <a class="nav-link text-dark">  @item.Categorie.Name</a>
                </td>
              
            </tr>
            
        }

      </tbody>
    </table>

<nav class="d-flex justify-content-center align-items-center" aria-label="Page navigation example">
    <ul class="pagination">

        <li class="page-item">
            @{
                if (Model.id == 0 || Model.id == 1)
                {
                    <span class="btn page-link disabled" disabled aria-hidden="true">First</span>
                }
                else
                {
                    <a class="btn page-link" asp-controller="Product" asp-action="Index" asp-route-id="0" asp-route-showNum="@Model.showNum">
                        <span aria-hidden="true">First</span>
                    </a>
                }
            }

        </li>

        @{
            int prevPageIndex = Model.id - 1;
        }

        <li class="page-item">
            @if (Model.id > 1)
            {
                <a class="btn page-link" asp-controller="Product" asp-action="Index" asp-route-id="@prevPageIndex" asp-route-showNum="@Model.showNum">
                    <span aria-hidden="true"><i class="bi bi-arrow-left"></i></span>
                </a>

            }
            else
            {
                <a class="btn page-link disabled" disabled>
                    <span aria-hidden="true"><i class="bi bi-arrow-left"></i></span>
                </a>
            }
        </li>

        @{

            if (Model.id >= 5)
            {
                var b = Model.id - 5;
                for (int i = 6; i != 1; i--)
                {

                    b = b + 1;
                    <a class="btn page-link" asp-controller="Product" asp-action="Index" asp-route-id="@b" asp-route-showNum="@Model.showNum">@b</a>

                }
            }
            else if (Model.id != 0 || Model.id != 1)
            {
                for (int i = 1; i < Model.id; i++)
                {
                    <a class="btn page-link" asp-controller="Product" asp-action="Index" asp-route-id="@i" asp-route-showNum="@Model.showNum">@i</a>
                }
            }

        }


        @{
            int currentIndex;
            if (Model.id == 0)
            {
                currentIndex = 1;
            }
            else
            {
                currentIndex = Model.id;
            }

        }
        <li class="page-item active"><a class="page-link" href="#">@currentIndex</a></li>



        @{
            int nextPageIndex;
            if (Model.id == 0)
            {
                nextPageIndex = 2;
            }
            else
            {
                nextPageIndex = Model.id + 1;
            }
        }

        @{
            var a = Model.id;
            if (Model.maxPageIndex - Model.id >= 5)
            {
                for (int i = 0; i < 5; i++)
                {
                    if (a == 0)
                    {
                        a = 1;
                    }
                    a = a + 1;
                    <a class="btn page-link" asp-controller="Product" asp-action="Index" asp-route-id="@a" asp-route-showNum="@Model.showNum">@a</a>

                }
            }
            else
            {
                for (int i = 0; i < Model.maxPageIndex - Model.id; i++)
                {

                    a = a + 1;
                    <a class="btn page-link" asp-controller="Product" asp-action="Index" asp-route-id="@nextPageIndex" asp-route-showNum="@Model.showNum">@a</a>

                }
            }


        }

        <li class="page-item">
            @if (Model.id < Model.maxPageIndex)
            {
                <a class="btn page-link" asp-controller="Product" asp-action="Index" asp-route-id="@nextPageIndex" asp-route-showNum="@Model.showNum">
                    <span aria-hidden="true"><i class="bi bi-arrow-right"></i></span>
                </a>
            }
            else
            {
                <a class="btn page-link disabled" disabled>
                    <span aria-hidden="true"><i class="bi bi-arrow-right"></i></span>
                </a>
            }
        </li>

        <li class="page-item">

            @{
                if (Model.id == Model.maxPageIndex)
                {

                    <span class="btn page-link disabled" disabled aria-hidden="true">Last</span>

                }
                else
                {
                    <a class="btn page-link" asp-controller="Product" asp-action="Index" asp-route-id="@Model.maxPageIndex" asp-route-showNum="@Model.showNum">
                        <span aria-hidden="true">Last</span>
                    </a>
                }
            }


        </li>

    </ul>
</nav>

               
                








